@model SIMS_Web.Controllers.DashboardViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="mb-8 border-b border-gray-200 pb-4">
    <h1 class="text-3xl font-light text-gray-700">Welcome <span class="font-medium text-[#20B2AA]">Kyton Marko</span></h1>
</div>

<div class="bg-gradient-to-r from-[#E6F8F8] to-[#F0FFFF] border border-[#B2E6E6] rounded-lg p-5 mb-8 shadow-sm">
    <div class="flex items-start">
        <div class="flex-shrink-0 mt-1">
            <i class="fas fa-graduation-cap text-[#20B2AA] text-xl"></i>
        </div>
        <div class="ml-4">
            <h2 class="text-lg font-medium text-gray-700 mb-2">Enter VLE</h2>
