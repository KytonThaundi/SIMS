@model SIMS.Web.Models.ResetAdminPasswordViewModel
@{
    ViewData["Title"] = "Reset Admin Password";
    Layout = "_LoginLayout";
}

<div class="flex min-h-screen items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md space-y-8">
        <div>
            <img class="mx-auto h-12 w-auto" src="~/images/sims-logo.png" alt="Mombera University Logo">
            <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Reset Admin Password</h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                This page allows you to reset the password for the admin@system.com account.
            </p>
            <p class="mt-2 text-center text-sm text-red-600 font-semibold">
                Security Notice: This page should be removed after initial setup.
            </p>
        </div>

        <form asp-controller="Account" asp-action="ResetAdminPassword" method="post" class="mt-8 space-y-6">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-red-500 text-sm"></div>

            <div>
                <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700">New Password</label>
                <div class="mt-1">
                    <input asp-for="NewPassword" class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="new-password" required>
                    <span asp-validation-for="NewPassword" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div>
                <label asp-for="ConfirmNewPassword" class="block text-sm font-medium text-gray-700">Confirm New Password</label>
                <div class="mt-1">
                    <input asp-for="ConfirmNewPassword" class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="new-password" required>
                    <span asp-validation-for="ConfirmNewPassword" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div>
                <label asp-for="SecurityCode" class="block text-sm font-medium text-gray-700">Security Code</label>
                <div class="mt-1">
                    <input asp-for="SecurityCode" class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                    <span asp-validation-for="SecurityCode" class="text-red-500 text-sm"></span>
                </div>
                <p class="mt-1 text-xs text-gray-500">Enter the security code provided by your system administrator.</p>
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Reset Admin Password
                </button>
            </div>

            <div class="text-center">
                <a href="@Url.Action("Login", "Account")" class="text-sm text-blue-600 hover:text-blue-500">Back to Login</a>
                <br />
                <a href="@Url.Action("TestDbConnection", "Account")" class="text-sm text-red-600 hover:text-red-500">Test Database Connection</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
