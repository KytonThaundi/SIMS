@{
    ViewData["Title"] = "Locked out";
    Layout = "_LoginLayout";
}

<div class="flex min-h-screen items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md space-y-8 text-center">
        <div>
            <img class="mx-auto h-12 w-auto" src="~/images/sims-logo.png" alt="Mombera University Logo">
            <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Account Locked</h2>
        </div>
        <div class="mt-8">
            <div class="rounded-md bg-yellow-50 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-exclamation-triangle text-yellow-400 text-xl"></i>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-yellow-800">Account Locked</h3>
                        <div class="mt-2 text-sm text-yellow-700">
                            <p>This account has been locked out, please try again later or contact an administrator.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-6">
                <a href="@Url.Action("Login", "Account")" class="text-[#20B2AA] hover:text-[#1C9E9E]">
                    <i class="fas fa-arrow-left mr-2"></i> Return to login
                </a>
            </div>
        </div>
    </div>
</div>
