@model SIMS_Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}

<div class="flex min-h-screen bg-gray-100">
    <!-- Left sidebar -->
    <div class="w-64 bg-white p-6 border-r border-gray-200">
        <h3 class="text-base font-semibold text-gray-700 mb-3">Find out more</h3>
        <ul class="space-y-1">
            <li>
                <a href="#" class="flex items-center text-[#20B2AA] hover:text-[#1C9E9E] text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>Online learning experience</span>
                </a>
            </li>
        </ul>

        <h3 class="text-base font-semibold text-gray-700 mt-6 mb-3">Need Help?</h3>
        <ul class="space-y-1">
            <li>
                <a href="#" class="flex items-center text-[#20B2AA] hover:text-[#1C9E9E] text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>Payment Methods</span>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center text-[#20B2AA] hover:text-[#1C9E9E] text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>Support</span>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center text-[#20B2AA] hover:text-[#1C9E9E] text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>FAQ</span>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center text-[#20B2AA] hover:text-[#1C9E9E] text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>Contact Us</span>
                </a>
            </li>
        </ul>

        <div class="mt-6">
            <a href="#" class="block w-full py-2 px-4 bg-[#20B2AA] text-white text-center text-sm font-medium rounded hover:bg-[#1C9E9E]">
                Apply Now
            </a>
        </div>

        <div class="mt-3">
            <a href="#" class="block w-full py-2 px-4 bg-gray-700 text-white text-center text-sm font-medium rounded hover:bg-gray-800">
                Login
            </a>
        </div>
    </div>

    <!-- Main content -->
    <div class="flex-1 p-8">
        <div class="max-w-3xl mx-auto">
            <h1 class="text-xl font-bold text-gray-800 pb-2 border-b border-gray-300 mb-6">Log in</h1>

            <div class="bg-gradient-to-r from-[#E6F8F8] to-[#F0FFFF] border border-[#B2E6E6] p-6 rounded-lg mb-8 shadow-sm">
                <h2 class="text-base font-medium mb-4">Welcome to the <span class="font-bold text-[#20B2AA]">Mombera University (MW)</span></h2>

                <p class="mb-4 text-sm">Use your account credentials to login:</p>

                <div class="mb-4 flex justify-between items-center">
                    <button id="loginTabBtn" class="px-4 py-2 bg-[#20B2AA] text-white rounded-t-lg text-sm font-medium">
                        Login
                    </button>
                    <button id="registerTabBtn" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-t-lg text-sm font-medium">
                        Register
                    </button>
                </div>

                <!-- Login Form -->
                <div id="loginForm">
                    <form asp-controller="Account" asp-action="Login" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label for="email-address" class="block text-sm font-medium text-gray-700 mb-1">Username / Email:</label>
                            <input asp-for="Email" id="email-address" name="Email" type="email" autocomplete="email" required
                                   class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#20B2AA]"
                                   placeholder="Username / Email">
                            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                        </div>

                        <div class="mb-4">
                            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password:</label>
                            <input asp-for="Password" id="password" name="Password" type="password" autocomplete="current-password" required
                                   class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#20B2AA]"
                                   placeholder="Password">
                            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                        </div>

                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center">
                                <input asp-for="RememberMe" id="remember-me" name="RememberMe" type="checkbox"
                                       class="h-4 w-4 rounded border-gray-300 text-[#20B2AA] focus:ring-[#20B2AA]">
                                <label for="remember-me" class="ml-2 block text-xs text-gray-700">Remember me</label>
                            </div>

                            <a href="#" class="text-xs text-[#20B2AA] hover:text-[#1C9E9E]">Forgot your password?</a>
                        </div>

                        <div class="flex justify-end items-center">
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Account" asp-action="Logout" class="px-4 py-1.5 bg-gray-500 text-white text-sm font-medium rounded hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
                                    Logout
                                </a>
                            }

                            <button type="submit" class="w-full mt-4 py-2.5 px-6 bg-[#20B2AA] text-white text-base font-medium rounded hover:bg-[#1C9E9E] focus:outline-none focus:ring-2 focus:ring-[#20B2AA] focus:ring-offset-2 flex items-center justify-center">
                                Login
                            </button>
                        </div>

                        <div asp-validation-summary="All" class="text-red-500 text-sm mt-4"></div>
                    </form>
                </div>

                <!-- Registration Form -->
                <div id="registerForm" class="hidden">
                    <form asp-controller="Account" asp-action="Register" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-red-500 text-sm mb-4"></div>

                        <div class="mb-4">
                            <label for="register-email" class="block text-sm font-medium text-gray-700 mb-1">Email address:</label>
                            <input id="register-email" name="Email" type="email" autocomplete="email" required
                                   class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#20B2AA]"
                                   placeholder="Email address">
                        </div>

                        <div class="mb-4">
                            <label for="register-password" class="block text-sm font-medium text-gray-700 mb-1">Password:</label>
                            <input id="register-password" name="Password" type="password" autocomplete="new-password" required
                                   class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#20B2AA]"
                                   placeholder="Password">
                        </div>

                        <div class="mb-4">
                            <label for="register-confirm-password" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password:</label>
                            <input id="register-confirm-password" name="ConfirmPassword" type="password" autocomplete="new-password" required
                                   class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#20B2AA]"
                                   placeholder="Confirm Password">
                        </div>

                        <button type="submit" class="w-full mt-4 py-2.5 px-6 bg-[#20B2AA] text-white text-base font-medium rounded hover:bg-[#1C9E9E] focus:outline-none focus:ring-2 focus:ring-[#20B2AA] focus:ring-offset-2 flex items-center justify-center">
                            Create New Account
                        </button>
                    </form>
                </div>
            </div>

            <div class="bg-white p-6 rounded shadow">
                <ul class="space-y-3">
                    <li class="flex items-start">
                        <i class="fas fa-circle text-xs mt-1.5 mr-2 text-[#20B2AA]"></i>
                        <div>
                            <p class="text-sm">Do you want to study online on our <a href="#" class="text-[#20B2AA] hover:text-[#1C9E9E]">programmes</a>? Don't miss the chance! <a href="#" class="text-[#20B2AA] hover:text-[#1C9E9E]">Apply Now</a></p>
                        </div>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-circle text-xs mt-1.5 mr-2 text-[#20B2AA]"></i>
                        <div>
                            <p class="text-sm">You are facing issues with our system? Our <a href="#" class="text-[#20B2AA] hover:text-[#1C9E9E]">FAQ</a> in <a href="#" class="text-[#20B2AA] hover:text-[#1C9E9E]">help</a> section will provide you extra info to solve them.</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Tab switching functionality
        document.addEventListener('DOMContentLoaded', function() {
            const loginTabBtn = document.getElementById('loginTabBtn');
            const registerTabBtn = document.getElementById('registerTabBtn');
            const loginForm = document.getElementById('loginForm');
            const registerForm = document.getElementById('registerForm');

            loginTabBtn.addEventListener('click', function() {
                loginTabBtn.classList.remove('bg-gray-300', 'text-gray-700');
                loginTabBtn.classList.add('bg-[#20B2AA]', 'text-white');
                registerTabBtn.classList.remove('bg-[#20B2AA]', 'text-white');
                registerTabBtn.classList.add('bg-gray-300', 'text-gray-700');
                loginForm.classList.remove('hidden');
                registerForm.classList.add('hidden');
            });

            registerTabBtn.addEventListener('click', function() {
                registerTabBtn.classList.remove('bg-gray-300', 'text-gray-700');
                registerTabBtn.classList.add('bg-[#20B2AA]', 'text-white');
                loginTabBtn.classList.remove('bg-[#20B2AA]', 'text-white');
                loginTabBtn.classList.add('bg-gray-300', 'text-gray-700');
                registerForm.classList.remove('hidden');
                loginForm.classList.add('hidden');
            });
        });
    </script>
}
