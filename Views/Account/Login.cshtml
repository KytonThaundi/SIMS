@model SIMS.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}

<div class="flex bg-gray-100">
    <!-- Left sidebar -->
    <div class="w-64 bg-white px-6 py-3 border-r border-gray-200">
        <h3 class="text-base font-semibold text-gray-700 mb-3">Find out more</h3>
        <ul class="space-y-1">
            <li>
                <a href="#" class="flex items-center text-[#20B2AA] hover:text-[#1C9E9E] text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>Online learning experience</span>
                </a>
            </li>
        </ul>

        <h3 class="text-base font-semibold text-gray-700 mt-6 mb-3">Need Help?</h3>
        <ul class="space-y-1">
            <li>
                <a href="#" class="flex items-center text-[#20B2AA] hover:text-[#1C9E9E] text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>Payment Methods</span>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center text-[#20B2AA] hover:text-[#1C9E9E] text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>Support</span>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center text-[#20B2AA] hover:text-[#1C9E9E] text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>FAQ</span>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center text-[#20B2AA] hover:text-[#1C9E9E] text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>Contact Us</span>
                </a>
            </li>
        </ul>

        <div class="mt-6">
            <a href="#" class="block w-full py-2 px-4 bg-[#20B2AA] text-white text-center text-sm font-medium rounded hover:bg-[#1C9E9E]">
                Apply Now
            </a>
        </div>

        <div class="mt-3">
            <a href="#" class="block w-full py-2 px-4 bg-gray-700 text-white text-center text-sm font-medium rounded hover:bg-gray-800">
                Login
            </a>
        </div>
    </div>

    <!-- Main content -->
    <div class="flex-1 p-0">
        <div class="w-full">
            <div class="px-6 py-3">
                <h1 class="text-xl font-bold text-gray-800 pb-2 border-b border-gray-300 mb-3">Log in</h1>
            </div>

            <!-- Two-column layout -->
            <div class="flex flex-row">
                <!-- Login/Register Form Column -->
                <div class="w-2/3 px-6">
                    <div class="bg-gradient-to-r from-[#E6F8F8] to-[#F0FFFF] border border-[#B2E6E6] p-5 rounded-lg shadow-sm h-full">
                        <h2 class="text-base font-medium mb-4">Welcome to the <span class="font-bold text-[#20B2AA]">Mombera University (MW)</span></h2>

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="mb-4 p-2 bg-green-100 border border-green-300 text-green-700 rounded">
                                @TempData["SuccessMessage"]
                            </div>
                        }

                        <p class="mb-4 text-sm">Use your account credentials to login:</p>

                        <!-- Login Form -->
                        <div id="loginForm">
                            <form asp-controller="Account" asp-action="Login" method="post">
                                @Html.AntiForgeryToken()

                                <div class="mb-3">
                                    <label for="email-address" class="block text-sm font-medium text-gray-700 mb-1">Username / Email:</label>
                                    <input asp-for="Email" id="email-address" name="Email" type="email" autocomplete="email" required
                                           class="w-full p-1.5 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#20B2AA]"
                                           placeholder="Username / Email">
                                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password:</label>
                                    <input asp-for="Password" id="password" name="Password" type="password" autocomplete="current-password" required
                                           class="w-full p-1.5 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#20B2AA]"
                                           placeholder="Password">
                                    <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
                                </div>

                                <div class="flex items-center justify-between mb-3">
                                    <div class="flex items-center">
                                        <input asp-for="RememberMe" id="remember-me" name="RememberMe" type="checkbox"
                                               class="h-3 w-3 rounded border-gray-300 text-[#20B2AA] focus:ring-[#20B2AA]">
                                        <label for="remember-me" class="ml-1 block text-xs text-gray-700">Remember me</label>
                                    </div>

                                    <a href="@Url.Action("ResetAdminPassword", "Account")" class="text-xs text-[#20B2AA] hover:text-[#1C9E9E]">Reset Admin Password</a>
                                </div>

                                <div class="flex flex-col items-center">
                                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                                    {
                                        <a asp-controller="Account" asp-action="Logout" class="px-4 py-1 bg-gray-500 text-white text-xs font-medium rounded hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
                                            Logout
                                        </a>
                                    }

                                    <button type="submit" class="w-1/2 mt-3 py-2 px-6 bg-[#20B2AA] text-white text-sm font-medium rounded hover:bg-[#1C9E9E] focus:outline-none focus:ring-2 focus:ring-[#20B2AA] focus:ring-offset-2 flex items-center justify-center">
                                        <i class="fas fa-sign-in-alt mr-2"></i> Login
                                    </button>

                                    <div class="mt-3 text-center">
                                        <span class="text-xs text-gray-600">Don't have an account?</span>
                                        <a href="#" id="showRegisterForm" class="ml-1 text-xs text-[#20B2AA] hover:text-[#1C9E9E] hover:underline">Sign up</a>
                                    </div>
                                </div>

                                <div asp-validation-summary="All" class="text-red-500 text-sm mt-4"></div>
                            </form>
                        </div>

                        <!-- Registration Form -->
                        <div id="registerForm" class="hidden">
                            <form asp-controller="Account" asp-action="Register" method="post">
                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="All" class="text-red-500 text-sm mb-4"></div>

                                <div class="mb-3">
                                    <label for="register-email" class="block text-sm font-medium text-gray-700 mb-1">Email address:</label>
                                    <input id="register-email" name="Email" type="email" autocomplete="email" required
                                           class="w-full p-1.5 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#20B2AA]"
                                           placeholder="Email address">
                                </div>

                                <div class="mb-3">
                                    <label for="register-password" class="block text-sm font-medium text-gray-700 mb-1">Password:</label>
                                    <input id="register-password" name="Password" type="password" autocomplete="new-password" required
                                           class="w-full p-1.5 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#20B2AA]"
                                           placeholder="Password">
                                </div>

                                <div class="mb-3">
                                    <label for="register-confirm-password" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password:</label>
                                    <input id="register-confirm-password" name="ConfirmPassword" type="password" autocomplete="new-password" required
                                           class="w-full p-1.5 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#20B2AA]"
                                           placeholder="Confirm Password">
                                </div>

                                <div class="flex flex-col items-center">
                                    <button type="submit" class="w-1/2 mt-3 py-2 px-6 bg-[#20B2AA] text-white text-sm font-medium rounded hover:bg-[#1C9E9E] focus:outline-none focus:ring-2 focus:ring-[#20B2AA] focus:ring-offset-2 flex items-center justify-center">
                                        <i class="fas fa-user-plus mr-2"></i> Create Account
                                    </button>

                                    <div class="mt-3 text-center">
                                        <span class="text-xs text-gray-600">Already have an account?</span>
                                        <a href="#" id="showLoginForm" class="ml-1 text-xs text-[#20B2AA] hover:text-[#1C9E9E] hover:underline">Sign in</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Information Column -->
                <div class="w-1/3 px-6">
                    <div class="bg-white p-5 rounded shadow h-full">
                        <h3 class="text-sm font-semibold text-gray-800 mb-3 border-b border-gray-200 pb-1">Important Information</h3>
                        <ul class="space-y-3">
                            <li class="flex items-start">
                                <i class="fas fa-graduation-cap text-[#20B2AA] mt-0.5 mr-2 text-sm"></i>
                                <div>
                                    <p class="text-xs text-gray-600">Do you want to study online on our <a href="#" class="text-[#20B2AA] hover:text-[#1C9E9E] font-medium">programmes</a>? Don't miss the chance! <a href="#" class="text-[#20B2AA] hover:text-[#1C9E9E] font-medium">Apply Now</a></p>
                                </div>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-question-circle text-[#20B2AA] mt-0.5 mr-2 text-sm"></i>
                                <div>
                                    <p class="text-xs text-gray-600">You are facing issues with our system? Our <a href="#" class="text-[#20B2AA] hover:text-[#1C9E9E] font-medium">FAQ</a> in <a href="#" class="text-[#20B2AA] hover:text-[#1C9E9E] font-medium">help</a> section will provide you extra info to solve them.</p>
                                </div>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-calendar-alt text-[#20B2AA] mt-0.5 mr-2 text-sm"></i>
                                <div>
                                    <p class="text-xs text-gray-600">Check out our <a href="#" class="text-[#20B2AA] hover:text-[#1C9E9E] font-medium">calendar</a> for upcoming events, webinars, and important academic dates.</p>
                                </div>
                            </li>
                            <li class="flex items-start">
                                <i class="fas fa-phone-alt text-[#20B2AA] mt-0.5 mr-2 text-sm"></i>
                                <div>
                                    <p class="text-xs text-gray-600">Need direct assistance? Contact our support team at <a href="mailto:support@momberauniversity.com" class="text-[#20B2AA] hover:text-[#1C9E9E] font-medium">support@momberauniversity.com</a></p>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Form switching functionality
        document.addEventListener('DOMContentLoaded', function() {
            const loginForm = document.getElementById('loginForm');
            const registerForm = document.getElementById('registerForm');
            const showRegisterForm = document.getElementById('showRegisterForm');
            const showLoginForm = document.getElementById('showLoginForm');

            // Show register form
            showRegisterForm.addEventListener('click', function(e) {
                e.preventDefault();
                loginForm.classList.add('hidden');
                registerForm.classList.remove('hidden');
            });

            // Show login form
            showLoginForm.addEventListener('click', function(e) {
                e.preventDefault();
                registerForm.classList.add('hidden');
                loginForm.classList.remove('hidden');
            });
        });
    </script>
}
