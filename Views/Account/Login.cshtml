@model SIMS_Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}

<div class="flex min-h-screen bg-gray-100">
    <!-- Left sidebar -->
    <div class="w-64 bg-white p-6 border-r border-gray-200">
        <h3 class="text-base font-semibold text-gray-700 mb-3">Find out more</h3>
        <ul class="space-y-1">
            <li>
                <a href="#" class="flex items-center text-blue-600 hover:text-blue-800 text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>Online learning experience</span>
                </a>
            </li>
        </ul>

        <h3 class="text-base font-semibold text-gray-700 mt-6 mb-3">Need Help?</h3>
        <ul class="space-y-1">
            <li>
                <a href="#" class="flex items-center text-blue-600 hover:text-blue-800 text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>Payment Methods</span>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center text-blue-600 hover:text-blue-800 text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>Support</span>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center text-blue-600 hover:text-blue-800 text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>FAQ</span>
                </a>
            </li>
            <li>
                <a href="#" class="flex items-center text-blue-600 hover:text-blue-800 text-sm">
                    <i class="fas fa-chevron-right text-xs mr-2"></i>
                    <span>Contact Us</span>
                </a>
            </li>
        </ul>

        <div class="mt-6">
            <a href="#" class="block w-full py-2 px-4 bg-red-700 text-white text-center text-sm font-medium rounded hover:bg-red-800">
                Apply Now
            </a>
        </div>
    </div>

    <!-- Main content -->
    <div class="flex-1 p-8">
        <div class="max-w-3xl mx-auto">
            <h1 class="text-xl font-bold text-gray-800 pb-2 border-b border-gray-300 mb-6">Log in</h1>

            <div class="bg-gray-200 p-6 rounded mb-8">
                <h2 class="text-base font-medium mb-4">Welcome to the <span class="font-bold">Mombera University (MW)</span></h2>

                <p class="mb-4 text-sm">Use your account credentials to login:</p>

                <form asp-controller="Account" asp-action="Login" method="post">
                    <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                    <div class="mb-4">
                        <label for="email-address" class="block text-sm font-medium text-gray-700 mb-1">Username / Email:</label>
                        <input asp-for="Email" id="email-address" name="Email" type="email" autocomplete="email" required
                               class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
                               placeholder="Username / Email">
                        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password:</label>
                        <input asp-for="Password" id="password" name="Password" type="password" autocomplete="current-password" required
                               class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
                               placeholder="Password">
                        <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center">
                            <input asp-for="RememberMe" id="remember-me" name="RememberMe" type="checkbox"
                                   class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                            <label for="remember-me" class="ml-2 block text-xs text-gray-700">Remember me</label>
                        </div>

                        <a href="#" class="text-xs text-blue-600 hover:text-blue-800">Forgot your password?</a>
                    </div>

                    <div class="flex justify-end items-center">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Account" asp-action="Logout" class="px-4 py-1.5 bg-gray-500 text-white text-sm font-medium rounded hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
                                Logout
                            </a>
                        }

                        <button type="submit" class="px-4 py-1.5 bg-blue-600 text-white text-sm font-medium rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                            Login
                        </button>
                    </div>

                    <div asp-validation-summary="All" class="text-red-500 text-sm mt-4"></div>
                </form>
            </div>

            <div class="bg-white p-6 rounded shadow">
                <ul class="space-y-3">
                    <li class="flex items-start">
                        <i class="fas fa-circle text-xs mt-1.5 mr-2 text-blue-600"></i>
                        <div>
                            <p class="text-sm">Do you want to study online on our <a href="#" class="text-blue-600 hover:text-blue-800">programmes</a>? Don't miss the chance! <a href="#" class="text-blue-600 hover:text-blue-800">Apply Now</a></p>
                        </div>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-circle text-xs mt-1.5 mr-2 text-blue-600"></i>
                        <div>
                            <p class="text-sm">You are facing issues with our system? Our <a href="#" class="text-blue-600 hover:text-blue-800">FAQ</a> in <a href="#" class="text-blue-600 hover:text-blue-800">help</a> section will provide you extra info to solve them.</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
