<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mombera University</title>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="">
    <style>
        body {
            background-color: #f9fafb;
        }
        .mombera-turquoise {
            background-color: #20B2AA;
        }
        .mombera-turquoise-hover:hover {
            background-color: #1C9E9E;
        }
        .mombera-text-turquoise {
            color: #20B2AA;
        }
        .mombera-text-turquoise-hover:hover {
            color: #1C9E9E;
        }
        .mombera-bg-light {
            background-color: #F0FFFF;
        }
        .mombera-border-light {
            border-color: #B2E6E6;
        }
    </style>
</head>
<body class="flex flex-col min-h-screen">
    <!-- Splash Screen -->
    <partial name="_SplashScreen" />

    <!-- Top Bar -->
    <div class="bg-gray-200 text-gray-700 py-1.5 px-4">
        <div class="container mx-auto flex justify-between items-center">
            <div>
                <span class="text-sm">Call us +265 111 755 333</span>
            </div>
            <div class="flex space-x-6">
                <a href="#" class="text-sm text-gray-700 hover:text-[#20B2AA]">Website</a>
                <a href="#" class="text-sm text-gray-700 hover:text-[#20B2AA]">VLE</a>
                <a href="#" class="text-sm text-gray-700 hover:text-[#20B2AA]">Apply Now</a>
                <a asp-controller="Account" asp-action="Login" class="text-sm text-gray-700 hover:text-[#20B2AA]">Login</a>
            </div>
        </div>
    </div>

    <!-- Header with Logo -->
    <header class="bg-gray-100 shadow-sm border-b border-gray-200">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/" class="flex items-center">
                        <span class="text-2xl font-bold text-[#20B2AA]">MOMBERA</span>
                        <span class="text-xs font-light text-gray-400 ml-1 mt-2">UNIVERSITY</span>
                    </a>
                </div>
                <nav class="hidden md:flex space-x-8">
                    <a href="#" class="text-gray-600 hover:text-[#20B2AA] text-sm">Home</a>
                    <a href="#" class="text-gray-600 hover:text-[#20B2AA] text-sm">About us</a>
                    <a href="#" class="text-gray-600 hover:text-[#20B2AA] text-sm">Programmes</a>
                    <a href="#" class="text-gray-600 hover:text-[#20B2AA] text-sm">Find out more</a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main role="main" class="flex-grow flex flex-col">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-[#222222] text-white">
        <!-- Main footer content -->
        <div class="container mx-auto px-4 py-3">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <!-- Column 1: Welcome and Follow Us -->
                <div>
                    <p class="text-sm mb-1">Welcome to the <span class="text-[#F59E0B]">Mombera University (MW)</span></p>
                    <p class="text-gray-300 text-xs mb-2">You are not logged in.</p>

                    <p class="text-sm mb-1">Follow Us</p>
                    <div class="flex space-x-2">
                        <a href="#" class="text-gray-300 hover:text-[#20B2AA]"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-gray-300 hover:text-[#20B2AA]"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-gray-300 hover:text-[#20B2AA]"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-gray-300 hover:text-[#20B2AA]"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="text-gray-300 hover:text-[#20B2AA]"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>

                <!-- Column 2: Important Links -->
                <div>
                    <p class="text-sm text-[#F59E0B] mb-1">Important Links</p>
                    <ul class="space-y-0.5">
                        <li><a href="#" class="text-gray-300 hover:text-[#20B2AA] text-xs">About Us</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-[#20B2AA] text-xs">Programmes</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-[#20B2AA] text-xs">Online Learning Experience</a></li>
                        <li><a asp-controller="Account" asp-action="Login" class="text-gray-300 hover:text-[#20B2AA] text-xs">Login</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-[#20B2AA] text-xs">Apply Now</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-[#20B2AA] text-xs">Help</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-[#20B2AA] text-xs">Verify Certificates</a></li>
                    </ul>
                </div>

                <!-- Column 3: How To Find Us -->
                <div>
                    <p class="text-sm text-[#F59E0B] mb-1">How To Find Us</p>
                    <ul class="space-y-0.5 text-gray-300">
                        <li class="flex items-start">
                            <i class="fas fa-globe mt-0.5 mr-1.5 text-xs"></i>
                            <span class="text-xs">www.momberauniversity.ac.mw</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-envelope mt-0.5 mr-1.5 text-xs"></i>
                            <span class="text-xs">info@momberauniversity.com</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-phone mt-0.5 mr-1.5 text-xs"></i>
                            <span class="text-xs">+265 111 755 333</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-map-marker-alt mt-0.5 mr-1.5 text-xs"></i>
                            <span class="text-xs">Mombera University in Malawi, Lilongwe</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Server time -->
            <div class="mt-2 text-xs text-gray-400">
                <span>Server Date/Time: @DateTime.Now.ToString("dd-MM-yyyy HH:mm:ss")</span>
            </div>
        </div>

        <!-- Footer bottom links and copyright -->
        <div class="border-t border-[#333333] py-1">
            <div class="container mx-auto px-4">
                <div class="flex flex-wrap justify-between items-center">
                    <div class="flex space-x-4 text-xs text-gray-400">
                        <a href="#" class="hover:text-[#20B2AA]">Cookies Policy</a>
                        <a href="#" class="hover:text-[#20B2AA]">Terms and Conditions</a>
                        <a href="#" class="hover:text-[#20B2AA]">Privacy Policy</a>
                        <a href="#" class="hover:text-[#20B2AA]">Terms of use</a>
                    </div>
                    <div class="text-xs text-gray-400">
                        Mombera Â© 2016 - @DateTime.Now.Year | All rights reserved
                    </div>
                </div>
            </div>
        </div>

        <!-- Powered by -->
        <div class="bg-[#111111] py-1 text-right">
            <div class="container mx-auto px-4">
                <span class="text-xs text-gray-400">Powered by <img src="~/images/sims-logo.png" alt="SIMS" class="inline-block h-4 ml-1"></span>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
