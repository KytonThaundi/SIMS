@model SIMS.Web.ViewModels.AdministrationDashboardViewModel
@{
    ViewData["Title"] = "Administration";
}

<div class="mb-8 border-b border-gray-200 pb-4">
    <h1 class="text-3xl font-light text-gray-700">Administration <span class="font-medium text-[#20B2AA]">Dashboard</span></h1>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <!-- Users Card -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100">
        <div class="bg-gradient-to-r from-[#20B2AA] to-[#4ECDC4] p-4">
            <div class="flex justify-between items-center">
                <h2 class="text-white text-lg font-medium">Users</h2>
                <div class="bg-white bg-opacity-30 rounded-full p-2">
                    <i class="fas fa-users text-white"></i>
                </div>
            </div>
        </div>
        <div class="p-4">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-4xl font-bold text-gray-700">@Model.UserCount</p>
                    <p class="text-sm text-gray-500">Total Users</p>
                </div>
                <a asp-action="Users" class="px-4 py-2 bg-[#20B2AA] text-white rounded-lg text-sm hover:bg-[#1C9E9E] transition-colors duration-200 shadow-sm">
                    Manage
                </a>
            </div>
        </div>
    </div>

    <!-- Students Card -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100">
        <div class="bg-gradient-to-r from-[#20B2AA] to-[#4ECDC4] p-4">
            <div class="flex justify-between items-center">
                <h2 class="text-white text-lg font-medium">Students</h2>
                <div class="bg-white bg-opacity-30 rounded-full p-2">
                    <i class="fas fa-user-graduate text-white"></i>
                </div>
            </div>
        </div>
        <div class="p-4">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-4xl font-bold text-gray-700">@Model.StudentCount</p>
                    <p class="text-sm text-gray-500">Total Students</p>
                </div>
                <a asp-action="Students" class="px-4 py-2 bg-[#20B2AA] text-white rounded-lg text-sm hover:bg-[#1C9E9E] transition-colors duration-200 shadow-sm">
                    Manage
                </a>
            </div>
        </div>
    </div>

    <!-- Programs Card -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100">
        <div class="bg-gradient-to-r from-[#20B2AA] to-[#4ECDC4] p-4">
            <div class="flex justify-between items-center">
                <h2 class="text-white text-lg font-medium">Programs</h2>
                <div class="bg-white bg-opacity-30 rounded-full p-2">
                    <i class="fas fa-graduation-cap text-white"></i>
                </div>
            </div>
        </div>
        <div class="p-4">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-4xl font-bold text-gray-700">@Model.ProgrammeCount</p>
                    <p class="text-sm text-gray-500">Total Programs</p>
                </div>
                <a asp-action="Programs" class="px-4 py-2 bg-[#20B2AA] text-white rounded-lg text-sm hover:bg-[#1C9E9E] transition-colors duration-200 shadow-sm">
                    Manage
                </a>
            </div>
        </div>
    </div>

    <!-- Departments Card -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100">
        <div class="bg-gradient-to-r from-[#20B2AA] to-[#4ECDC4] p-4">
            <div class="flex justify-between items-center">
                <h2 class="text-white text-lg font-medium">Departments</h2>
                <div class="bg-white bg-opacity-30 rounded-full p-2">
                    <i class="fas fa-building text-white"></i>
                </div>
            </div>
        </div>
        <div class="p-4">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-4xl font-bold text-gray-700">@Model.DepartmentCount</p>
                    <p class="text-sm text-gray-500">Total Departments</p>
                </div>
                <a asp-action="Departments" class="px-4 py-2 bg-[#20B2AA] text-white rounded-lg text-sm hover:bg-[#1C9E9E] transition-colors duration-200 shadow-sm">
                    Manage
                </a>
            </div>
        </div>
    </div>

    <!-- Faculties Card -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100">
        <div class="bg-gradient-to-r from-[#20B2AA] to-[#4ECDC4] p-4">
            <div class="flex justify-between items-center">
                <h2 class="text-white text-lg font-medium">Faculties</h2>
                <div class="bg-white bg-opacity-30 rounded-full p-2">
                    <i class="fas fa-university text-white"></i>
                </div>
            </div>
        </div>
        <div class="p-4">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-4xl font-bold text-gray-700">@Model.FacultyCount</p>
                    <p class="text-sm text-gray-500">Total Faculties</p>
                </div>
                <a asp-controller="Faculties" asp-action="Index" class="px-4 py-2 bg-[#20B2AA] text-white rounded-lg text-sm hover:bg-[#1C9E9E] transition-colors duration-200 shadow-sm">
                    Manage
                </a>
            </div>
        </div>
    </div>

    <!-- Courses Card -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100">
        <div class="bg-gradient-to-r from-[#20B2AA] to-[#4ECDC4] p-4">
            <div class="flex justify-between items-center">
                <h2 class="text-white text-lg font-medium">Courses</h2>
                <div class="bg-white bg-opacity-30 rounded-full p-2">
                    <i class="fas fa-book text-white"></i>
                </div>
            </div>
        </div>
        <div class="p-4">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-4xl font-bold text-gray-700">@Model.CourseCount</p>
                    <p class="text-sm text-gray-500">Total Courses</p>
                </div>
                <a asp-controller="Courses" asp-action="Index" class="px-4 py-2 bg-[#20B2AA] text-white rounded-lg text-sm hover:bg-[#1C9E9E] transition-colors duration-200 shadow-sm">
                    Manage
                </a>
            </div>
        </div>
    </div>
</div>

<div class="bg-gradient-to-r from-[#E6F8F8] to-[#F0FFFF] border border-[#B2E6E6] rounded-lg p-5 mb-8 shadow-sm">
    <div class="flex items-start">
        <div class="flex-shrink-0 mt-1">
            <i class="fas fa-info-circle text-[#20B2AA] text-xl"></i>
        </div>
        <div class="ml-4">
            <h2 class="text-lg font-medium text-gray-700 mb-2">Administration Panel</h2>
            <p class="text-gray-600 mb-2 leading-relaxed">This administration panel allows you to manage all aspects of the system including users, students, programs, departments, and more.</p>
            <p class="text-gray-600 leading-relaxed">Use the cards above to navigate to the specific management sections.</p>
        </div>
    </div>
</div>
