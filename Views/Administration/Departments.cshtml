@model IEnumerable<SIMS.Web.Models.Department>
@{
    ViewData["Title"] = "Department Management";
}

<div class="mb-8 border-b border-gray-200 pb-4 flex justify-between items-center">
    <h1 class="text-3xl font-light text-gray-700">Department <span class="font-medium text-[#20B2AA]">Management</span></h1>
    <a asp-controller="Departments" asp-action="Create" class="px-4 py-2 bg-[#20B2AA] text-white rounded-lg text-sm hover:bg-[#1C9E9E] transition-colors duration-200 shadow-sm flex items-center">
        <i class="fas fa-plus mr-2"></i> Create New Department
    </a>
</div>

<div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100 mb-8">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gradient-to-r from-[#20B2AA] to-[#4ECDC4] text-white">
            <tr>
                <th scope="col" class="px-6 py-3.5 text-left text-xs font-medium uppercase tracking-wider">Department ID</th>
                <th scope="col" class="px-6 py-3.5 text-left text-xs font-medium uppercase tracking-wider">Department Name</th>
                <th scope="col" class="px-6 py-3.5 text-left text-xs font-medium uppercase tracking-wider">Faculty</th>
                <th scope="col" class="px-6 py-3.5 text-left text-xs font-medium uppercase tracking-wider">Actions</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-100">
            @foreach (var department in Model)
            {
                <tr class="hover:bg-gray-50 transition-colors duration-150">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="font-medium text-gray-700">@department.Dept_id</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-gray-700">@department.DeptName</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-gray-600">
                        @(department.Faculty?.FacultyName ?? "N/A")
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <div class="flex space-x-2">
                            <a asp-controller="Departments" asp-action="Details" asp-route-id="@department.Dept_id" class="text-blue-500 hover:text-blue-700">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-controller="Departments" asp-action="Edit" asp-route-id="@department.Dept_id" class="text-[#20B2AA] hover:text-[#1C9E9E]">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="Departments" asp-action="Delete" asp-route-id="@department.Dept_id" class="text-red-500 hover:text-red-700">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="flex justify-between items-center mb-4">
    <a asp-action="Index" class="text-[#20B2AA] hover:text-[#1C9E9E] flex items-center">
        <i class="fas fa-arrow-left mr-2"></i> Back to Dashboard
    </a>
</div>
