@model SIMS.Web.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="mb-8 border-b border-gray-200 pb-4">
    <h1 class="text-3xl font-light text-gray-700">Delete <span class="font-medium text-[#20B2AA]">User</span></h1>
</div>

<div class="bg-white rounded-lg shadow-md p-6 border border-gray-100 mb-8">
    <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded-lg mb-6">
        <div class="flex">
            <div class="flex-shrink-0">
                <i class="fas fa-exclamation-triangle text-red-500"></i>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Warning</h3>
                <div class="mt-2 text-sm text-red-700">
                    <p>Are you sure you want to delete this user? This action cannot be undone.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-6">
        <h3 class="text-lg font-medium text-gray-700 mb-4">User Details</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <p class="text-sm text-gray-500">Email</p>
                <p class="text-base text-gray-700">@Model.Email</p>
            </div>
            <div>
                <p class="text-sm text-gray-500">Username</p>
                <p class="text-base text-gray-700">@Model.UserName</p>
            </div>
            <div>
                <p class="text-sm text-gray-500">Roles</p>
                <div>
                    @foreach (var role in Model.Roles)
                    {
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-[#E6F8F8] text-[#20B2AA] mr-1">
                            @role
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>

    <form asp-action="DeleteUser" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="flex justify-between">
            <a asp-action="Users" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg text-sm hover:bg-gray-300 transition-colors duration-200">
                Cancel
            </a>
            <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-lg text-sm hover:bg-red-700 transition-colors duration-200 shadow-sm">
                Delete User
            </button>
        </div>
    </form>
</div>
